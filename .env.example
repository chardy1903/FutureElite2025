# Stripe Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive API keys

# Test Mode Keys (for development)
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Live Mode Keys (for production)
# STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY_HERE
# STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY_HERE

# Price IDs (create products in Stripe Dashboard first)
STRIPE_MONTHLY_PRICE_ID=price_YOUR_MONTHLY_PRICE_ID_HERE
STRIPE_ANNUAL_PRICE_ID=price_YOUR_ANNUAL_PRICE_ID_HERE

# Webhook Secret (optional - set up webhook later)
STRIPE_WEBHOOK_SECRET=

# Flask Secret Key
SECRET_KEY=your-secret-key-here
