# FutureElite Production Environment Variables
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================

# Flask Secret Key - MUST be set, minimum 32 characters
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_minimum_32_characters_long

# Application Environment
# Set to 'production' for production deployment
FLASK_ENV=production

# ============================================================================
# REQUIRED IF USING STRIPE - Application will reject webhooks without this
# ============================================================================

# Stripe Webhook Secret (starts with whsec_)
# Get from Stripe Dashboard -> Webhooks -> Signing secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Secret Key (starts with sk_live_ for production, sk_test_ for testing)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here

# Stripe Publishable Key (starts with pk_live_ for production, pk_test_ for testing)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Stripe Price IDs (from Stripe Dashboard -> Products)
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id_here
STRIPE_ANNUAL_PRICE_ID=price_your_annual_price_id_here

# ============================================================================
# OPTIONAL - Gunicorn Configuration
# ============================================================================

# Gunicorn bind address (default: 0.0.0.0:8080)
# GUNICORN_BIND=0.0.0.0:8080

# Number of worker processes (default: CPU count * 2 + 1)
# GUNICORN_WORKERS=4

# Log file paths (default: stdout/stderr, use '-' for stdout)
# GUNICORN_ACCESS_LOG=/var/log/futureelite/access.log
# GUNICORN_ERROR_LOG=/var/log/futureelite/error.log
# GUNICORN_LOG_LEVEL=info

# PID file location (optional)
# GUNICORN_PIDFILE=/var/run/futureelite.pid

# User and group to run as (optional, requires root to set)
# GUNICORN_USER=www-data
# GUNICORN_GROUP=www-data

# SSL certificates (if terminating SSL at gunicorn, otherwise use reverse proxy)
# GUNICORN_KEYFILE=/path/to/keyfile.pem
# GUNICORN_CERTFILE=/path/to/certfile.pem

# ============================================================================
# OPTIONAL - Reverse Proxy Configuration
# ============================================================================

# Number of proxy servers in front of application (for ProxyFix)
# Set to 1 if behind a single reverse proxy (nginx, Apache, etc.)
# Set to 2 if behind load balancer + reverse proxy
PROXY_FIX_NUM_PROXIES=1

# ============================================================================
# OPTIONAL - Application Configuration
# ============================================================================

# Data directory (default: ./data)
# DATA_DIR=./data

# Maximum upload size in bytes (default: 16MB)
# MAX_UPLOAD_SIZE=16777216

